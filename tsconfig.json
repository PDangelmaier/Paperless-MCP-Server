{
"compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true
},
"include": ["**/*.ts"],
"exclude": ["node_modules", "dist"]
}

